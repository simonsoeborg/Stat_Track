@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Benyt en lokal konto for at logge ind.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Kodeord</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Log ind</button>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-outline-secondary">
                            <a class="specific-a secondary-a" id="forgot-password" asp-page="./ForgotPassword">Glemt din adgangskode?</a>
                        </button>
                        <button class="btn btn-outline-success">
                            <a class="specific-a success-a" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Opret en ny bruger</a>
                        </button>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Login via en anden service.</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                                for details on setting up this ASP.NET application to support logging in via external services.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        if (provider.DisplayName == "Google")
                                        {
                                            <button type="submit" class="btn btn-outline-google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="bi bi-google"></i> @provider.DisplayName</button>
                                        }

                                        if (provider.DisplayName == "Twitter")
                                        {
                                            <button type="submit" class="btn btn-outline-twitter" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="bi bi-twitter"></i> @provider.DisplayName</button>
                                        }

                                        if (provider.DisplayName == "Facebook")
                                        {
                                            <button type="submit" class="btn btn-outline-facebook" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="bi bi-facebook"></i> @provider.DisplayName</button>
                                        }
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
