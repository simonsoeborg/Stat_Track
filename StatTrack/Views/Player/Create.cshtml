@model StatTrack.Models.PlayerModel
@using StatTrack.Logic
@{
    ViewData["Title"] = "Create";

    DataHandler data = new DataHandler();
    List<string>
    PlayerPosition = data.getPositions();
}


    <h1>Opret ny spiller</h1>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PlayerName" class="form-label"></label>
                    <input asp-for="PlayerName" class="form-control" />
                    <span asp-validation-for="PlayerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlayerPosition" class="form-label"> </label>
                    <select asp-for="PlayerPosition" select class="form-select">
                        <option selected>Vælg Position</option>
                        @for (int i = 0; i < PlayerPosition.Count; i++)
                        {
                    <option value="@PlayerPosition[i].ToString()">@PlayerPosition[i]</option>}
                    </select>
                    <span asp-validation-for="PlayerPosition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YOB" class="form-label"></label>
                    <input asp-for="YOB" class="form-control" />
                    <span asp-validation-for="YOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opret" class="btn btn-outline-success" />
                    <form asp-action="Index">
                        <button type="submit" class="btn btn-outline-secondary">Tilbage</button>
                    </form>
                </div>
            </form>
        </div>
    </div>




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
