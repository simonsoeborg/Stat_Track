@{
    ViewData["Title"] = "Kamp";

    var CurrentYear = 0;
    List<string> uYearsNames = new List<string>(); CurrentYear = DateTime.Now.Year;

        
    uYearsNames.Add("Senior");
    uYearsNames.Add("Oldies");
    string newItem = "U19 " + (CurrentYear - 19).ToString()[2] + (CurrentYear - 19).ToString()[3] + "/" + (CurrentYear - 18).ToString()[2] + (CurrentYear - 18).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U17 " + (CurrentYear - 17).ToString()[2] + (CurrentYear - 17).ToString()[3] + "/" + (CurrentYear - 16).ToString()[2] + (CurrentYear - 16).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U15 " + (CurrentYear - 15).ToString()[2] + (CurrentYear - 15).ToString()[3] + "/" + (CurrentYear - 14).ToString()[2] + (CurrentYear - 14).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U13 " + (CurrentYear - 13).ToString()[2] + (CurrentYear - 13).ToString()[3] + "/" + (CurrentYear - 12).ToString()[2] + (CurrentYear - 12).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U11 " + (CurrentYear - 11).ToString()[2] + (CurrentYear - 11).ToString()[3] + "/" + (CurrentYear - 10).ToString()[2] + (CurrentYear - 10).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U10 " + (CurrentYear - 9).ToString()[2] + (CurrentYear - 9).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U9 " + (CurrentYear - 8).ToString()[2] + (CurrentYear - 8).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U8 " + (CurrentYear - 7).ToString()[2] + (CurrentYear - 7).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U7 " + (CurrentYear - 6).ToString()[2] + (CurrentYear - 6).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U6 " + (CurrentYear - 5).ToString()[2] + (CurrentYear - 5).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U5 " + (CurrentYear - 4).ToString()[2] + (CurrentYear - 4).ToString()[3];
    uYearsNames.Add(newItem);
    newItem = "U4 " + (CurrentYear - 3).ToString()[2] + (CurrentYear - 3).ToString()[3];
    uYearsNames.Add(newItem);

    List<string> leagueList = new List<string>();
    leagueList.Add("Liga");
    leagueList.Add("1. Div");
    leagueList.Add("2. Div");
    leagueList.Add("3. Div");
    leagueList.Add("Niveaustævne");
    leagueList.Add("Turnering");
}

<div class="container">
    <div class="row overall_row">
        <div class="col-4">
            <div class="container">
                <!-- My Club Name and score -->
                <div class="input-group">
                    <input type="text" class="form-control teamForm" placeholder="Mit klub navn">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team1_yearBtn">
                            @*
                                Hent data fra Databasen
                                U3 - U19 (U3, U5, U7, U9, U11, U13, U15, U17, U19)
                                2021 - 4 = 2018 = 18, (18, 16, 14, 12, 10, 08, 06, 04, 02)
                            *@

                            <option selected>Vælg Årgang</option>
                            @for (int i = 0; i < uYearsNames.Count; i++)
                            {
                                <option value="@i">@uYearsNames[i]</option>
                            }
                        </select>
                        <select class="form-select" id="team1_leagueBtn">
                            @*
                                Liga, 1. Div, 2. Div, 3. Div, Cup event
                            *@
                            <option selected>Vælg Række</option>
                            @for (int i = 0; i < leagueList.Count; i++)
                            {
                                <option value="@i">@leagueList[i]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <!-- Penalty button, modal -->
                        <div class="container ctnr_nopadding">
                            <p align="left">
                                <button id="team1_eventBtn" type="button" class="btn btn-outline-warning" onclick="">Hændelse</button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="container" style="text-align: center;">
                <h1 id="timer">00:00</h1>
                <button id="startBtn" type="button" class="btn btn-outline-success">Start</button>
                <button id="stopBtn" type="button" class="btn btn-outline-danger">Stop</button>
                <div class="row justify-content-md-center">
                    <div class="col-7">
                        <div class="input-group">
                            <select class="form-select" id="gameLength">
                                <option selected>Kampens varighed</option>
                                <option value="1">30 min</option>
                                <option value="2">40 min</option>
                                <option value="3">50 min</option>
                                <option value="4">60 min</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="container">
                <!-- Opponent Club Name and score -->
                <div class="input-group">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                    <input type="text" class="form-control teamForm" placeholder="Modstander klub navn">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team2_yearBtn">
                            <option selected>Vælg Årgang</option>
                            @for (int i = 0; i < uYearsNames.Count; i++)
                            {
                                <option value="@i">@uYearsNames[i]</option>
                            }
                        </select>
                        <select class="form-select" id="team2_leagueBtn">
                            <option selected>Vælg Række</option>
                            @for (int i = 0; i < leagueList.Count; i++)
                            {
                                <option value="@i">@leagueList[i]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <!-- Penalty button, modal -->
                            <button id="team2_eventBtn" type="button" class="btn btn-outline-warning" onclick="">Hændelse</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="container" style="display: block; margin-left: auto; margin-right: auto;">
            <!-- Tabel for all players -->
            <div class="row">
                <div class="col-4"><b>Spillernavn</b></div>
                <div class="col-4"><b>Spillerposition</b></div>
                <div class="col-1"><b>Skud</b></div>
                <div class="col-1"><b>Mål</b></div>
                <div class="col-1"><b>Assists</b></div>
                <div class="col-1"><b>Redninger</b></div>
            </div>
            <div class="row">
                @{
                    int n = 12;
                }
                @for (int i = 0; i < n; i++)
                {
                    int player = i + 1;
                    <div class="row" style="margin: 0.10rem; padding: 0.10rem;">
                        <div class="col-4">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Spiller @player" id="player_@player" />
                            </div>
                        </div>
                        <div class="col-4">
                            <select class="form-select" id="playerPosition_@player">
                                <option value="1">Målvogter</option>
                                <option value="2">Højrefløj</option>
                                <option value="3">Venstrefløj</option>
                                <option value="4">Højreback</option>
                                <option value="5">Venstreback</option>
                                <option value="6">Playmaker</option>
                                <option value="7">Streg</option>
                            </select>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>