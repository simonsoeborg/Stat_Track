@using StatTrack.Logic
@model StatTrack.Models.MasterModel
@{
    ViewData["Title"] = "Kamp";
    DataHandler data = new DataHandler();

    List<string> uYearsNames = data.getYears();

    List<string> leagueList = data.GetLeagues();
}

<div class="container">
    <div class="row overall_row">
        <div class="col-4">
            <div class="container">
                <!-- My Club Name and score -->
                <div class="input-group">
                    <input type="text" class="form-control teamForm" placeholder="Mit klub navn">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team1_yearBtn">
                            @*
                                Hent data fra Databasen
                                U3 - U19 (U3, U5, U7, U9, U11, U13, U15, U17, U19)
                                2021 - 4 = 2018 = 18, (18, 16, 14, 12, 10, 08, 06, 04, 02)
                            *@

                            <option selected>Vælg Årgang</option>
                            @for (int i = 0; i < uYearsNames.Count; i++)
                            {
                                <option value="@i">@uYearsNames[i]</option>
                            }
                        </select>
                        <select class="form-select" id="team1_leagueBtn">
                            @*
                                Liga, 1. Div, 2. Div, 3. Div, Cup event
                            *@
                            <option selected>Vælg Række</option>
                            @for (int i = 0; i < leagueList.Count; i++)
                            {
                                <option value="@i">@leagueList[i]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <!-- Penalty button, modal -->
                        <div class="container ctnr_nopadding">
                            <p align="left">
                                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#HomeEventModal">
                                    Hændelse
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="container" style="text-align: center;">
                <h1 id="timer">00:00</h1>
                <button id="startBtn" type="button" class="btn btn-outline-success">Start</button>
                <button id="stopBtn" type="button" class="btn btn-outline-danger">Stop</button>
                <div class="row justify-content-md-center">
                    <div class="col-7">
                        <div class="input-group">
                            <select class="form-select" id="gameLength">
                                <option selected>Kampens varighed</option>
                                <option value="1">30 min</option>
                                <option value="2">40 min</option>
                                <option value="3">50 min</option>
                                <option value="4">60 min</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="container">
                <!-- Opponent Club Name and score -->
                <div class="input-group">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                    <input type="text" class="form-control teamForm" placeholder="Modstander klub navn">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team2_yearBtn">
                            <option selected>Vælg Årgang</option>
                            @for (int i = 0; i < uYearsNames.Count; i++)
                            {
                                <option value="@i">@uYearsNames[i]</option>
                            }
                        </select>
                        <select class="form-select" id="team2_leagueBtn">
                            <option selected>Vælg Række</option>
                            @for (int i = 0; i < leagueList.Count; i++)
                            {
                                <option value="@i">@leagueList[i]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <!-- Penalty button, modal -->
                            <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#AwayEventModal">
                                Hændelse
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-md-center">
        <div class="container" style="display: block; margin-left: auto; margin-right: auto;">
            <!-- Tabel for all players -->
            <div class="row">
                <div class="col-4"><b>Spillernavn</b></div>
                <div class="col-4"><b>Spillerposition</b></div>
                <div class="col-1"><b>Skud</b></div>
                <div class="col-1"><b>Mål</b></div>
                <div class="col-1"><b>Assists</b></div>
                <div class="col-1"><b>Redninger</b></div>
            </div>
            <div class="row">
                @{
                    int n = 7;
                }
                @for (int i = 0; i < n; i++)
                {
                    int player = i + 1;
                    <div class="row" style="margin: 0.10rem; padding: 0.10rem;">
                        <div class="col-4">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Spiller @player" id="player_@player" />
                            </div>
                        </div>
                        <div class="col-4">
                            <select class="form-select" id="playerPosition_@player">
                                <option value="1">Målvogter</option>
                                <option value="2">Højrefløj</option>
                                <option value="3">Venstrefløj</option>
                                <option value="4">Højreback</option>
                                <option value="5">Venstreback</option>
                                <option value="6">Playmaker</option>
                                <option value="7">Streg</option>
                            </select>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="input-group">
                                <input type="number" class="form-control" placeholder="0" min="0" max="100">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="HomeEventModal" tabindex="-1" aria-labelledby="HomeEventModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="HomeEventModalTitle">Hændelse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Load spillerliste -> Vælg spiller -->
                <div class="input-group">
                    <select class="form-select">
                        <option selected>Vælg spiller</option>
                    </select>
                </div>
                <!-- Vælg hændelse -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="Home2minEvent">
                    <label class="form-check-label" for="Home2minEvent">
                        2 minutters udvisning
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="HomeWarningEvent">
                    <label class="form-check-label" for="HomeWarningEvent">
                        Gult kort
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="HomeRedCardEvent">
                    <label class="form-check-label" for="HomeRedCardEvent">
                        Rødt kort
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-success">Tilføj</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AwayEventModal" tabindex="-1" aria-labelledby="AwayEventModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AwayEventModalTitle">Hændelse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Load spillerliste -> Vælg spiller -->
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">#</span>
                    <input type="number" class="form-control" placeholder="Spillernummer" aria-label="Spillernummer" aria-describedby="addon-wrapping">
                </div>
                <!-- Vælg hændelse -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="Away2minEvent">
                    <label class="form-check-label" for="Away2minEvent">
                        2 minutters udvisning
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="AwayWarningEvent">
                    <label class="form-check-label" for="AwayWarningEvent">
                        Gult kort
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="AwayRedCardEvent">
                    <label class="form-check-label" for="AwayRedCardEvent">
                        Rødt kort
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-success">Tilføj</button>
            </div>
        </div>
    </div>
</div>