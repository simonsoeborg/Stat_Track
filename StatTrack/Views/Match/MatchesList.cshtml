@using Microsoft.AspNetCore.Identity
@using StatTrack.Logic
@model IEnumerable<StatTrack.Models.GameDataModel>

@{
    DataHandler dataH = new DataHandler();
    int i = 0; 
    ViewData["Title"] = "Match";
}

<h2>Mine Kampe</h2>
@foreach (var item in Model)
{
    <div class="accordion-item" id="MatchList_@i">
        <h2 class="accordion-header" id="acordianHeader_@i">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#colapseOn_@i" aria-controls="#colapseOn_@i">
                @dataH.getTeamName(item.CreatorTeamId).ToString()  - @Html.DisplayFor(modelItem => item.Modstander)
            </button>
        </h2>

        <div id="colapseOn_@i" class="accordion-collapse collapse" aria-labelledby="createTeamHeading1" data-bs-parent="#CreateTeamAccordion">
            <div class="accordion-body">
       
                    <div class="form-group">
                        <input type="submit" value="Opret" class="btn btn-outline-success" />
                    </div>
            </div>
        </div>
    </div>
    i++;
}






    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card border-primary mb-3" style="width: 24rem">
                <div class="card-body">

                    <h5 class="card-title" id="MatchListHeader"> @dataH.getTeamName(item.CreatorTeamId).ToString()  - @Html.DisplayFor(modelItem => item.Modstander) </h5>
                    <p id="MatchListscore">@Html.DisplayFor(modelItem => item.CreatorTeamGoals)  -  @Html.DisplayFor(modelItem => item.ModstanderGoals)</p>


                    <p id="Matchdato">Dato: @Html.DisplayFor(modelItem => item.KampDato)</p>

                    <a class="btn btn-outline-primary" asp-area="" asp-action="MatchInfo" asp-route-id="@item.KampId">Se mere</a>
                </div>
            </div>
        }
    </div>

