@using StatTrack.Logic
@using StatTrack.Controllers
@model CombinedMatchViewModel

@{
    var dataH = new DataHandler();
    var i = 0;

    var con = new MatchController();
    List<MatchViewModel> ekstraData;
    ViewData["Title"] = "Match";

    var dato = "";
}

<h2>Mine Kampe</h2>
<div class="accordion" id="MatchListAccordion"></div>
@if (Model.GameModel != null)
{
    @foreach (var item in Model.GameModel)
    {
        @if (item.CreatorTeamGoals >= item.ModstanderGoals)
        {
            dato = "" + item.KampDato[0] + item.KampDato[1] + item.KampDato[2] + item.KampDato[3] + item.KampDato[4] + item.KampDato[5] + item.KampDato[6] + item.KampDato[7] + item.KampDato[8] + item.KampDato[9];
            <div class="accordion-item" style="border-color: var(--bs-success);">
                <h2 class="accordion-header" id="accordianHeader_@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#colapseOn_@i" aria-controls="#colapseOn_@i">
                        @dato | @dataH.getTeamName(item.CreatorTeamId) vs @item.Modstander | (@item.CreatorTeamGoals : @item.ModstanderGoals)
                    </button>
                </h2>
                <div id="colapseOn_@i" class="accordion-collapse collapse" aria-labelledby="accordianHeader_@i" data-bs-parent="#MatchListAccordion">
                    <div class="accordion-body">
                        <div class="row justify-content-md-center">
                            @{ ekstraData = con.SpecificData(item.KampId); }

                            @foreach (var item2 in ekstraData)
                            {
                                <div class="row justify-content-md-center">
                                    <div class="col-2">@item2.Name</div>
                                    <div class="col-2">@item2.Time</div>
                                    <div class="col-2">@item2.EventType</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
        }
        else
        {
            <div class="accordion-item" style="border-color: var(--bs-danger);">
                <h2 class="accordion-header" id="accordianHeader_@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#colapseOn_@i" aria-controls="#colapseOn_@i">
                        @dato | @dataH.getTeamName(item.CreatorTeamId) vs @item.Modstander | (@item.CreatorTeamGoals : @item.ModstanderGoals)
                    </button>
                </h2>
                <div id="colapseOn_@i" class="accordion-collapse collapse" aria-labelledby="accordianHeader_@i" data-bs-parent="#MatchListAccordion">
                    <div class="accordion-body">
                        <div class="row justify-content-md-center">
                            @{ ekstraData = con.SpecificData(item.KampId); }

                            @foreach (var item2 in ekstraData)
                            {
                                <div class="row justify-content-md-center">
                                    <div class="col-2">@item2.Name</div>
                                    <div class="col-2">@item2.Time</div>
                                    <div class="col-2">@item2.EventType</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        i++;
    }
}