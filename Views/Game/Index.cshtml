@{
    ViewData["Title"] = "Kamp";
}

<script src="js/game.js" language="javascript" type="text/javascript"></script>

<div class="container">
    <div class="row overall_row">
        <div class="col-4">
            <div class="container">
                <!-- My Club Name and score -->
                <div class="input-group">
                    <input type="text" class="form-control teamForm" placeholder="Mit hold navn">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team1_yearBtn">
                            <option selected>Vælg Årgang</option>
                            <option value="1">00</option>
                            <option value="2">02</option>
                            <option value="3">04</option>
                            <option value="4">06</option>
                            <option value="5">08</option>
                            <option value="6">10</option>
                        </select>
                        <select class="form-select" id="team1_leagueBtn">
                            <option selected>Vælg Række</option>
                            <option value="1">Liga</option>
                            <option value="2">1. Div</option>
                            <option value="3">2. Div</option>
                            <option value="4">3. Div</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <!-- Penalty button, modal -->
                        <div class="container ctnr_nopadding">
                            <p align="left">
                                <button id="team1_eventBtn" type="button" class="btn btn-outline-warning" onclick="">Hændelse</button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="container" style="text-align: center;">
                <h1 id="timer">00:00</h1>
                <button id="startBtn" type="button" class="btn btn-outline-success" onclick="startTimer">Start</button>
                <button id="stopBtn" type="button" class="btn btn-outline-danger" onclick="stopTimer">Stop</button>
            </div>
        </div>

        <div class="col-4">
            <div class="container">
                <!-- Opponent Club Name and score -->
                <div class="input-group">
                    <input type="number" class="form-control scoreForm" placeholder="0" min="0" max="100">
                    <input type="text" class="form-control teamForm" placeholder="Modstander hold navn">
                </div>
                <div class="row">
                    <!-- Set årgang & Række, dropdowns -->
                    <div class="input-group">
                        <select class="form-select" id="team2_yearBtn">
                            <option selected>Vælg Årgang</option>
                            <option value="1">00</option>
                            <option value="2">02</option>
                            <option value="3">04</option>
                            <option value="4">06</option>
                            <option value="5">08</option>
                            <option value="6">10</option>
                        </select>
                        <select class="form-select" id="team2_leagueBtn">
                            <option selected>Vælg Række</option>
                            <option value="1">Liga</option>
                            <option value="2">1. Div</option>
                            <option value="3">2. Div</option>
                            <option value="4">3. Div</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <!-- Penalty button, modal -->
                            <button id="team2_eventBtn" type="button" class="btn btn-outline-warning" onclick="">Hændelse</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tabel for all players -->
    </div>
</div>









